<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <data:vector name="DataOne" />

  <mesh name="MeshOne" dimensions="3">
    <use-data name="DataOne" />
  </mesh>

  <mesh name="MeshTwo" dimensions="3">
    <use-data name="DataOne" />
  </mesh>

  <participant name="SolverOne">
    <provide-mesh name="MeshOne" />
    <write-data name="DataOne" mesh="MeshOne" />
  </participant>

  <participant name="SolverTwo">
    <receive-mesh name="MeshOne" from="SolverOne" />
    <provide-mesh name="MeshTwo" />
    <mapping:rbf-pum-direct
      direction="read"
      from="MeshOne"
      to="MeshTwo"
      constraint="consistent"
      polynomial="off"
      vertices-per-cluster="8">
      <basis-function:gaussian support-radius="auto" tuner-optimization-interval="once"/>
    </mapping:rbf-pum-direct>
    <read-data name="DataOne" mesh="MeshTwo" />
  </participant>

  <m2n:sockets acceptor="SolverOne" connector="SolverTwo" />

  <coupling-scheme:serial-explicit>
    <participants first="SolverOne" second="SolverTwo" />
    <max-time-windows value="5" />
    <time-window-size value="1.0" />
    <exchange data="DataOne" mesh="MeshOne" from="SolverOne" to="SolverTwo" />
  </coupling-scheme:serial-explicit>
</precice-configuration>
