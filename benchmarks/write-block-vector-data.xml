<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > info"
      format="---[precice][%Module%:%Line%] in %Function%: %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3">
    <data:vector name="Vector" />

    <mesh name="MeshB">
      <use-data name="Vector" />
    </mesh>

    <mesh name="MeshA">
      <use-data name="Vector" />
    </mesh>

    <participant name="A">
      <provide-mesh name="MeshA" />
      <write-data name="Vector" mesh="MeshA" />
    </participant>

    <participant name="B">
      <receive-mesh name="MeshA" from="A" />
    </participant>

    <m2n:sockets from="A" to="B" />

    <coupling-scheme:serial-explicit>
      <time-window-size value="1" />
      <max-time value="1" />
      <participants first="A" second="B" />
      <exchange data="Vector" mesh="MeshA" from="A" to="B" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
